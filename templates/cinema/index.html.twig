{% extends 'base.html.twig' %}

{% block title %}Cinema index{% endblock %}

{% block body %}
    <h1>Cinema index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Numero_de_tel</th>
                <th>Email</th>
                <th>Mot_de_passe</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cinema in cinemas %}
            <tr>
                <td>{{ cinema.id }}</td>
                <td>{{ cinema.nom }}</td>
                <td>{{ cinema.adresse }}</td>
                <td>{{ cinema.numeroDeTel }}</td>
                <td>{{ cinema.email }}</td>
                <td>{{ cinema.motDePasse }}</td>
                <td>{{ cinema.image }}</td>
                <td>
                    <a href="{{ path('cinema_show', {'id': cinema.id}) }}">show</a>
                    <a href="{{ path('cinema_edit', {'id': cinema.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cinema_new') }}">Create new</a>
{% endblock %}
